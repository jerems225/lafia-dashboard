<div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
  <div class="card h-100 card-plain border">
    <div class="card-body d-flex flex-column justify-content-center text-center">
      <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#modal-form">
        <i class="fa fa-plus text-secondary mb-3"></i>
        <h5 class=" text-secondary">
          Nouvelle Categorie
        </h5>
      </a>
    </div>
  </div>
</div>

<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <div class="card card-plain">
          <div class="card-header pb-0 text-left">
            <h3 class="font-weight-bolder text-info text-gradient">Nouvelle Categorie</h3>
          </div>
          <div class="card-body">
            {{form_start(form, {'attr':{'enctype':'multipart/form-data', 'id':'form-categorie'}})}}
              <label>Titre</label>
              <div class="input-group mb-3">
                {{form_widget(form.title,{'attr':{'class':'form-control', 'placeholder':'Ecrire ici ...', 'autofocus': 'autofocus'}})}}
              </div>
              <label>Description</label>
              <div class="input-group mb-3">
                {{form_widget(form.description,{'attr':{'class':'form-control', 'placeholder':'Ecrire ici...'}})}}
              </div>
              <label>Image d'illustration</label>

              {% include './_partials/companies/categories/upload-images.html.twig' %}

              <div class="text-center">
                <button type="submit" class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0">ENREGISTRER</button>
              </div>
            {{form_end(form)}}
          </div>
          <div class="card-footer text-center pt-0 px-lg-2 px-1">
            <p class="mb-4 text-sm mx-auto">
              Veuillez toujours enregister les modifications !
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>