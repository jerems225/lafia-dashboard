<div class="container-fluid">
  <div class="card card-body blur shadow-blur overflow-hidden">
    <div class="row gx-4">
      <div class="col-auto my-auto">
        <div class="h-100">
          <h5 class="mb-1 text-primary">
            <b>Categories d'entreprises</b>
          </h5>
          <p class="mb-0 font-weight-bold text-sm">
            Consultation, Ajout, Modification et Suppression
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12 mt-4">
      <div class="card mb-4">
        <div class="card-header pb-0 p-3">
          <p class="text-sm">Liste des Categories d'Entreprises</p>
          {% for message in app.flashes('categories-companies-error') %}
            <div class="alert alert-sm alert-danger" role="alert">
              <strong class="text-white">{{message}}</strong>
            </div>
          {% endfor %}

          {% for message in app.flashes('add-categorie') %}
          <div class="alert alert-sm alert-success" role="alert">
            <strong class="text-dark">{{message}}</strong>
          </div>
        {% endfor %}

        </div>
        <div class="card-body p-3">
          <div class="row">

            {% include './_partials/companies/categories/add/map-categories.html.twig' %}

            {% include './_partials/companies/categories/add/modal-add.html.twig' %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
