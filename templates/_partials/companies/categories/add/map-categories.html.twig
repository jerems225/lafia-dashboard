{% set catNum = 0 %}
{% for c in categories|reverse %}
  <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
    <div class="card card-blog card-plain">
      <div class="position-relative">
        <a class="d-block shadow-xl border-radius-xl">
          <img src="{{c.image}}" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
        </a>
      </div>
      <div class="card-body px-1 pb-0">
        <a href="javascript:;">
          <h5>
            {{c.name}}
          </h5>
        </a>
        <p class="mb-4 text-sm">
          {{c.description}}
        </p>
        <p class="text-gradient text-dark mb-4 text-sm">{{c.createdAt|format_datetime('full', 'short', locale='fr')}}</p>
        <div class="d-flex align-items-center justify-content-between">
          <a href="{{path('admin.categories-companies.edit', {uuid : c._id})}}" class="btn btn-warning bg-gradient-secondary btn-sm mb-0"><i class="fas fa-edit text-dark text-start"></i> Modifier</a>
          <div class="avatar-group">
            <a href="{{path('admin.categories-companies.delete', {uuid : c._id})}}" class="btn btn-danger bg-gradient-warning btn-sm mb-0" onClick="showMessage(event);">Supprimer</a>
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <a href="{{path('admin.categories-companies.entreprise', {uuid : c._id})}}" class="btn btn-dark bg-gradient-dark btn-sm m-4 w-100">LES ENTREPRISES</a>
        </div>
        
      </div>
    </div>
  </div>
{% endfor %}
