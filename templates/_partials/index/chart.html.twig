    <div class="col-lg-7">
      <div class="card z-index-2">
        <div class="card-header pb-0 d-flex justify-content-center">
          <h6 class="m-2 icon-move-right">Ventes & commandes <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i></h6>
          <form method="post" id="stats" class="form-group">
            <input type="hidden" id="statyear" name="statsyear" />
         </form>
         <select class="form-control form-select form-control-sm text-center w-20 border-none" id="year" onChange="autoSubmit();">
          {% for y in statsyear|reverse %}
            <option value="{{y.statsYear}}" {% if y.isSelect %} selected{% endif %}>{{y.statsYear}}</option>
          {% endfor %}
        </select>
        </div>
        <div class="card-body p-4">
          <div class="chart">
            <canvas id="sales" class="chart-canvas" height="300"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="../assets/js/plugins/chartjs.min.js"></script>
  <script>
        function autoSubmit()
        {
            var form = document.getElementById('stats');
            var year = document.getElementById('year');
            var hidden = document.getElementById('statyear');
            console.log(hidden)
            hidden.value = year.value
            form.submit();
        }
  </script>
  <script>

    //company request
    var ctx = document.getElementById("company-request").getContext("2d");

    new Chart(ctx, {
      type: "bar",
      data: {
        labels: [
          "Jan",
          "Fev",
          "Mar",
          "Avr",
          "Mai",
          "Juin",
          "Juil",
          "Aout",
          "Sept",
          "Oct",
          "Nov",
          "Dec"
        ],
        datasets: [
          {
            label: "Demandes",
            tension: 0.4,
            borderWidth: 0,
            borderRadius: 4,
            borderSkipped: false,
            backgroundColor: "#fff",
            data: {{requests|json_encode}},
            maxBarThickness: 6
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        interaction: {
          intersect: false,
          mode: 'index'
        },
        scales: {
          y: {
            grid: {
              drawBorder: false,
              display: false,
              drawOnChartArea: false,
              drawTicks: false
            },
            ticks: {
              suggestedMin: 0,
              suggestedMax: 500,
              beginAtZero: true,
              padding: 15,
              font: {
                size: 14,
                family: "Open Sans",
                style: 'normal',
                lineHeight: 2
              },
              color: "#fff"
            }
          },
          x: {
            grid: {
              drawBorder: false,
              display: false,
              drawOnChartArea: false,
              drawTicks: false
            },
            ticks: {
              display: false
            }
          }
        }
      }
    });


    //sales
    var ctx2 = document.getElementById("sales").getContext("2d");

    var gradientStroke1 = ctx2.createLinearGradient(0, 230, 0, 50);

    gradientStroke1.addColorStop(1, 'rgba(203,12,159,0.2)');
    gradientStroke1.addColorStop(0.2, 'rgba(72,72,176,0.0)');
    gradientStroke1.addColorStop(0, 'rgba(203,12,159,0)'); //purple colors

    var gradientStroke2 = ctx2.createLinearGradient(0, 230, 0, 50);

    gradientStroke2.addColorStop(1, 'rgba(20,23,39,0.2)');
    gradientStroke2.addColorStop(0.2, 'rgba(72,72,176,0.0)');
    gradientStroke2.addColorStop(0, 'rgba(20,23,39,0)'); //purple colors

    var gradientStroke3 = ctx2.createLinearGradient(0, 230, 0, 20);

    gradientStroke2.addColorStop(1, 'rgba(20,23,39,0.2)');
    gradientStroke2.addColorStop(0.2, 'rgba(72,72,176,0.0)');
    gradientStroke2.addColorStop(0, 'rgba(20,23,39,0)'); //purple colors

    new Chart(ctx2, {
      type: "line",
      data: {
        labels: [
          "Jan",
          "Fev",
          "Mar",
          "Avr",
          "Mai",
          "Juin",
          "Juil",
          "Aout",
          "Sept",
          "Oct",
          "Nov",
          "Dec"
        ],
        datasets: [
          {
            label: "Ventes",
            tension: 0.4,
            borderWidth: 0,
            pointRadius: 0,
            borderColor: "#cb0c9f",
            borderWidth: 3,
            backgroundColor: gradientStroke1,
            fill: true,
            data: {{sales|json_encode}},
            maxBarThickness: 10

          },
          {
            label: "Commandes en attentes",
            tension: 0.4,
            borderWidth: 0,
            pointRadius: 0,
            borderColor: "#3A416F",
            borderWidth: 3,
            backgroundColor: gradientStroke2,
            fill: true,
            data: {{ordersPending|json_encode}},
            maxBarThickness: 10
          },
          {
            label: "Commandes Annulées",
            tension: 0.4,
            borderWidth: 0,
            pointRadius: 0,
            borderColor: "#E41212",
            borderWidth: 3,
            backgroundColor: gradientStroke3,
            fill: true,
            data: {{ordersCanceled|json_encode}},
            maxBarThickness: 10

          },
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: true
          }
        },
        interaction: {
          intersect: false,
          mode: 'index'
        },
        scales: {
          y: {
            grid: {
              drawBorder: false,
              display: true,
              drawOnChartArea: true,
              drawTicks: false,
              borderDash: [5, 5]
            },
            ticks: {
              display: true,
              padding: 10,
              color: '#b2b9bf',
              font: {
                size: 11,
                family: "Open Sans",
                style: 'normal',
                lineHeight: 2
              }
            }
          },
          x: {
            grid: {
              drawBorder: false,
              display: false,
              drawOnChartArea: false,
              drawTicks: false,
              borderDash: [5, 5]
            },
            ticks: {
              display: true,
              color: '#b2b9bf',
              padding: 20,
              font: {
                size: 11,
                family: "Open Sans",
                style: 'normal',
                lineHeight: 2
              }
            }
          }
        }
      }
    });
  </script>