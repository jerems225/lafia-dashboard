{% if promocode %}
  <div class="modal-content">
    <div class="modal-body p-0">
      <div class="card card-plain">
        <div class="card-header pb-0 text-left">
          <h3 class="font-weight-bolder text-info text-gradient">Modification du code promo</h3>
        </div>
        <div class="card-body">
          {{form_start(form)}}
          <label>Code Promo</label>
          <div class="input-group mb-3">
            {{form_widget(form.code_promo,{'attr':{'class':'form-control', 'placeholder':'Ex: LAFIA225', 'autofocus': 'autofocus', 'value': promocode.code}})}}
          </div>
          <label>Pourcentage</label>
          <div class="input-group mb-3">
            {{form_widget(form.promoPercent,{'attr':{'class':'form-control', 'placeholder':'Ex: 10', 'value': promocode.promoPercent}})}}
          </div>

          <div class="text-center d-flex">
            <a href="{{path('admin.promo-codes')}}" class="btn btn-round bg-gradient-dark btn-lg w-30 mt-4 m-2 mb-0">RETOUR</a>
            <button type="submit" class="btn btn-round bg-gradient-info btn-lg w-70 mt-4 mb-0">ENREGISTRER</button>
          </div>
          {{form_end(form)}}
        </div>
        <div class="card-footer text-center pt-0 px-lg-2 px-1">
          <p class="mb-4 text-sm mx-auto">
            Veuillez toujours enregister les modifications !
          </p>
        </div>
      </div>
    </div>
  </div>
{% endif %}
