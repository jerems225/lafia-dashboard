<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
      <div class="modal-content">
        <div class="modal-body p-0">
          <div class="card card-plain">
            <div class="card-header pb-0 text-left">
              <h3 class="font-weight-bolder text-info text-gradient">Nouveau code promo</h3>
            </div>
            <div class="card-body">
              {{form_start(form)}}
                <label>Code Promo</label>
                <div class="input-group mb-3">
                  {{form_widget(form.code_promo,{'attr':{'class':'form-control', 'placeholder':'Ex: LAFIA225', 'autofocus': 'autofocus'}})}}
                </div>
                <label>Pourcentage</label>
                <div class="input-group mb-3">
                  {{form_widget(form.promoPercent,{'attr':{'class':'form-control', 'placeholder':'Ex: 10'}})}}
                </div>
  
                <div class="text-center">
                  <button type="submit" class="btn btn-round bg-gradient-info btn-lg w-100 mt-4 mb-0">ENREGISTRER</button>
                </div>
              {{form_end(form)}}
            </div>
            <div class="card-footer text-center pt-0 px-lg-2 px-1">
              <p class="mb-4 text-sm mx-auto">
                Veuillez toujours enregister les modifications !
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>